<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BuatKerja.Views.RegisterPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Full Name:"/>
            <Entry x:Name="name" Placeholder="Your Full Name"/>
            <Label Text="Username:"/>
            <Entry x:Name="username" Placeholder="Username"/>
            <Label Text="Password:"/>
            <Entry x:Name="password" Placeholder="Password" Keyboard="Default"/>
            <Button Text="Save" CornerRadius="10" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>